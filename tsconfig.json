{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "outDir": "./dist",
        "sourceMap": true,
        "strict": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "client": ["client"],
            "server": ["server"],
            "server_configs": ["server/configs"],
            "server_controllers": ["server/src/controllers"],
            "entities": ["server/src/entities"]
          }
    },
    "include": ["server/**/*", "client/**/*", "utils/**/*", "types/**/*", "global.d.ts"],
    "exclude": ["node_modules"]
}
